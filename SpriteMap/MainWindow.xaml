<Window x:Class="SpriteMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpriteMap"
        Title="SpriteMapGenerator" Height="600" Width="800" BorderThickness="0">
    <Grid>
        <Menu Height="23" HorizontalAlignment="Left" Name="mMain" VerticalAlignment="Top" Width="790">
            <MenuItem Header="_File " Name="miFile">
                <MenuItem Header="_New" Click="miFileNew_Click" Name="miNew" ></MenuItem>
                <MenuItem Header="_Open" Click="miFileOpen_Click" Name="miOpen"></MenuItem>
                <MenuItem Header="_Save" Click="miFileSave_Click" Name="miSave"></MenuItem>
                <MenuItem Header="_Save As..." Click="miFileSaveAs_Click" Name="miSaveAs"></MenuItem>
                <MenuItem Header="_Export" Click="miFileExport_Click" Name="miExport"></MenuItem>
                <MenuItem Header="_Export As..." Click="miFileExportAs_Click" Name="miExportAs"></MenuItem>
                <MenuItem Header="_Quit" Click="miFileQuit_Click" Name="miQuit"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit " Name="miEdit">
                <MenuItem Header="_Add Sprites" Click="miEditAddSprites_Click" Name="miAddSprites"></MenuItem>
                <MenuItem Header="_Add Folder" Click="miEditAddFolder_Click" Name="miAddFolder"></MenuItem>
                <MenuItem Header="_Delete" Click="miEditDelete_Click" Name="miDelete"></MenuItem>
            </MenuItem>
            <MenuItem Header="_View " Name="miView">
            </MenuItem>
            <MenuItem Header="_Tools " Name="miTools">
            </MenuItem>
            <MenuItem Header="_Help " Name="miHelp">
            </MenuItem>
        </Menu>
        <Label Content="Preview" Height="28" HorizontalAlignment="Left" Margin="12,353,0,0" Name="label1" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="175"></Label>
        <Label Content="Sprites" Height="28" HorizontalAlignment="Left" Margin="12,85,0,0" Name="label2" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="175"></Label>
        <Label Content="Sprite Sheet" Height="28" HorizontalAlignment="Left" Margin="193,85,0,0" Name="label3" VerticalAlignment="Top" Width="573" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
    
        <Canvas Name="cSpriteSheet" Margin="193,109,12,12" AllowDrop="True" Background="Red" MouseLeftButtonDown="cSpriteSheet_MouseLeftButtonDown"></Canvas>
        <Canvas Name="cTilePreview" Margin="12,374,591,12" Width="175" Height="175" Background="Blue"></Canvas>
        <!--local:PreviewCanvas x:Name="cTilePreview" Margin="12,374,591,12"></local:PreviewCanvas-->

        <ListBox Name="lbSprites" Margin="12,109,591,214" AllowDrop="True" SelectionChanged="lbSprites_SelectionChanged"></ListBox>

    </Grid>
</Window>
