<Window x:Class="SpriteMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SpriteMap"
        Title="SpriteMapGenerator" Height="600" Width="800" BorderThickness="0" MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid>
        <Menu Height="23" HorizontalAlignment="Left" Name="mMain" VerticalAlignment="Top" Width="790">
            <MenuItem Header="_File " Name="miFile">
                <MenuItem Header="_New" Click="miFileNew_Click" Name="miNew" ></MenuItem>
                <MenuItem Header="_Open" Click="miFileOpen_Click" Name="miOpen"></MenuItem>
                <MenuItem Header="_Save" Click="miFileSave_Click" Name="miSave"></MenuItem>
                <MenuItem Header="_Save As..." Click="miFileSaveAs_Click" Name="miSaveAs"></MenuItem>
                <MenuItem Header="_Export" Click="miFileExport_Click" Name="miExport"></MenuItem>
                <MenuItem Header="_Export As..." Click="miFileExportAs_Click" Name="miExportAs"></MenuItem>
                <MenuItem Header="_Quit" Click="miFileQuit_Click" Name="miQuit"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit " Name="miEdit">
                <MenuItem Header="_Add Sprites" Click="miEditAddSprites_Click" Name="miAddSprites"></MenuItem>
                <MenuItem Header="_Add Folder" Click="miEditAddFolder_Click" Name="miAddFolder"></MenuItem>
                <MenuItem Header="_Delete" Click="miEditDelete_Click" Name="miDelete"></MenuItem>
            </MenuItem>
            <MenuItem Header="_View " Name="miView">
            </MenuItem>
            <MenuItem Header="_Tools " Name="miTools">
            </MenuItem>
            <MenuItem Header="_Help " Name="miHelp">
            </MenuItem>
        </Menu>
        <Label Content="Preview" Height="28" HorizontalAlignment="Left" Margin="12,363,0,0" Name="label1" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="160"></Label>
        <Label Content="Sprites" Height="28" HorizontalAlignment="Left" Margin="12,75,0,0" Name="label2" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="175"></Label>
        <Label Content="Sprite Sheet" Height="28" HorizontalAlignment="Left" Margin="201,75,0,0" Name="label3" VerticalAlignment="Top" Width="577" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
    
        <Canvas Name="cSpriteSheet" Margin="188,101,0,0" AllowDrop="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="448" Width="586" Drop="cSpriteSheet_Drop" MouseLeftButtonDown="cSpriteSheet_MouseLeftButtonDown" MouseMove="cSpriteSheet_MouseMove">
            <Canvas.Background>
                <ImageBrush ImageSource="/SpriteMap;component/Resources/Images/background.png" Stretch="UniformToFill" TileMode="Tile" Viewport="0,0,21.3306662044397,21.3306662044397" ViewportUnits="Absolute" />
            </Canvas.Background>
        </Canvas>
        <Canvas Name="cTilePreview" Margin="12,389,606,12" Width="160" Height="160" AllowDrop="True">
            <Canvas.Background>
                <ImageBrush ImageSource="/SpriteMap;component/Resources/Images/background.png" Stretch="UniformToFill" TileMode="Tile" Viewport="0,0,21.3306662044397,21.3306662044397" ViewportUnits="Absolute" />
            </Canvas.Background>
        </Canvas>

        <ListBox Name="lbSprites" Margin="12,101,606,204" AllowDrop="True" SelectionChanged="lbSprites_SelectionChanged" PreviewMouseLeftButtonDown="lbSprites_PreviewMouseLeftButtonDown"></ListBox>

    </Grid>
</Window>
